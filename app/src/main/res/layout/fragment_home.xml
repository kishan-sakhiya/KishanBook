<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="850dp"
    android:background="@color/bg_color"
    tools:context=".Fragment.HomeFragment">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgAnimation"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:padding="10dp"
                android:src="@drawable/circle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/home_fragment_welcome"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:textSize="24sp"
                android:textStyle="bold" />


            <me.biubiubiu.justifytext.library.JustifyTextView
                android:id="@+id/texView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="15dp"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:text="@string/home_fragment_message"
                android:textSize="14sp" />


            <me.biubiubiu.justifytext.library.JustifyTextView
                android:id="@+id/texView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="15dp"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:text="@string/home_fragment_quotes"
                android:textSize="14sp" />

            <me.biubiubiu.justifytext.library.JustifyTextView
                android:id="@+id/texView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="15dp"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:text="@string/home_fragment_quote2"
                android:textSize="14sp" />


        </LinearLayout>

</FrameLayout>