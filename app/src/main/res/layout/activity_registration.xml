<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context=".Registration">

    <ProgressBar
        android:id="@+id/progressBarReg"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtReg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="30dp"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="@string/txt_registration"
                android:textAllCaps="true"
                android:textColor="@color/dark_gray"
                android:textSize="22sp"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/edtFname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/edt_bg_design"
                android:drawablePadding="5dp"
                android:hint="@string/edt_hint_fname"
                android:inputType="text"
                android:maxLength="25"
                android:maxLines="1"
                android:padding="10dp"
                android:paddingStart="15dp"
                android:paddingLeft="15dp"
                android:textColor="@color/dark"
                android:textColorHint="@color/dark_gray"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edtLname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/edt_bg_design"
                android:drawablePadding="5dp"
                android:hint="@string/edt_hint_lname"
                android:inputType="text"
                android:maxLength="25"
                android:maxLines="1"
                android:padding="10dp"
                android:paddingStart="15dp"
                android:paddingLeft="15dp"
                android:textColor="@color/dark"
                android:textColorHint="@color/dark_gray"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/edt_bg_design"
                android:drawablePadding="5dp"
                android:hint="@string/edt_hint_username"
                android:inputType="text"
                android:maxLength="25"
                android:maxLines="1"
                android:padding="10dp"
                android:paddingStart="15dp"
                android:paddingLeft="15dp"
                android:textColor="@color/dark"
                android:textColorHint="@color/dark_gray"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/edt_bg_design"
                android:drawablePadding="5dp"
                android:hint="@string/edt_hint_password"
                android:inputType="textPassword"
                android:maxLength="25"
                android:maxLines="1"
                android:padding="10dp"
                android:paddingStart="15dp"
                android:paddingLeft="15dp"
                android:textColor="@color/dark"
                android:textColorHint="@color/dark_gray"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edtCPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/edt_bg_design"
                android:drawablePadding="5dp"
                android:hint="@string/edt_hint_Cpassword"
                android:inputType="textPassword"
                android:maxLength="25"
                android:maxLines="1"
                android:padding="10dp"
                android:paddingStart="15dp"
                android:paddingLeft="15dp"
                android:textColor="@color/dark"
                android:textColorHint="@color/dark_gray"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/chkShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:text="Show"
                android:textColor="@color/dark"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/btnbackground"
                android:text="@string/btnregister"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:backgroundTint="@color/dark_gray" />


        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>